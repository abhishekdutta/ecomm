<%= form_for @product, html: {multipart: true} do |f| %>
		<% if @product.errors.any? %>
			<div id="errors">
				<h2><%= pluralize(@product.errors.count, "error") %> prevented this product from saving</h2>
				<ul>
					<% @product.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<p>
			<%= f.label :image %><br>
			<%= f.file_field :image %>
		</p>
		<p>
			<%= f.label :title %><br>
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label :body %><br>
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit %>
		</p>
	<% end %>